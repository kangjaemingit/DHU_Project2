<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/img_mainbackground"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/black"
        android:text="게임 이름"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_normal"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:background="@drawable/img_normalbutton"
            android:clickable="true" />

        <TextView
            android:id="@+id/main_hard"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:background="@drawable/img_hardbutton"
            android:clickable="true"
            android:textSize="100dp"/>
        <TextView
            android:id="@+id/main_stop"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:background="@drawable/img_stopwatchbutton"
            android:clickable="true"
            android:textSize="100dp"/>
        <TextView
            android:id="@+id/main_record"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:background="@drawable/img_recordbutton"
            android:clickable="true"
            android:textSize="100dp"/>
    </LinearLayout>





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/img_mainbackground"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="달 려 라  한 의"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="80dp" />

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_normal"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:background="@drawable/img_normal_button"
            android:clickable="true" />

        <TextView
            android:id="@+id/main_hard"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:background="@drawable/img_hard_button"
            android:clickable="true"
            android:textSize="100dp"/>
        <TextView
            android:id="@+id/main_stop"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:background="@drawable/img_stopwatch_button"
            android:clickable="true"
            android:textSize="100dp"/>
        <TextView
            android:id="@+id/main_record"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:background="@drawable/img_record_button"
            android:clickable="true"
            android:textSize="100dp"/>
    </LinearLayout>





</LinearLayout>
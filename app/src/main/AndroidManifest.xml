<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dhu_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_dhu_projcet"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dhu_projcet_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LodingActivity"
            android:screenOrientation="landscape"
            android:theme="@style/LodingTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/LodingTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".RecordActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".NormalActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".HardActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".StopActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
    </application>

</manifest>